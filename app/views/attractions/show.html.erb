<%= @attraction.name %>
<%= @attraction.users.count %>
<%= @attraction.tickets %>
<%= @attraction.min_height %>
<%= @attraction.nausea_rating %>
<%= @attraction.happiness_rating %>

<% if current_user.admin %>
    <%= link_to 'Edit Attraction', [:edit, @attraction] %></p>
<% else %>
    <%= form_for @ride do |f| %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :attraction_id %>
        <%= f.submit "Go on this ride", class:"btn btn-light" %>
    <% end %>
<% end %>